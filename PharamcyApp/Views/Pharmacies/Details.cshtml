@model PharamcyApp.Models.Pharmacy

@{
    ViewData["Title"] = "Details";
    int count = 0;
    var all = "";
}

<h1>Details</h1>

<div>
    <h4>Pharmacy</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PharmacyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PharmacyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PharmacyLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PharmacyLocation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.phonenumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.phonenumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.workhour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.workhour)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.emailConf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.emailConf)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PharmacyID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<table class="table table-hover">
    <thead>
        <tr>
           

            <th>Report</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.sells)
        {
            count += 1;
            all += item.Medicine.MedicineName;
        }
    </tbody>
    <tfoot>
        <tr>
            <td><b>No of Medicines:</b>@count</td>
        </tr>
    </tfoot>
</table>
