@model IEnumerable<PharamcyApp.Models.Pharmacy>

@{
    ViewData["Title"] = "Index";
}

    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h4 class="alert-heading">These are all Available Pharmacies</h4>
        <p class="mb-0">sorted by the loctaion then by the pharmacy name</p>
    </div>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="text-black-50">
            <th>
                @Html.DisplayNameFor(model => model.PharmacyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PharmacyLocation)
            </th>
            <th>

                <a asp-action="Index" > @Html.DisplayNameFor(model => model.phonenumber)</a>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.workhour)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.CoverImage)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.BackCoverImage)
            </th>*@

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-light">
            <td>
                @Html.DisplayFor(modelItem => item.PharmacyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PharmacyLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phonenumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.workhour)
            </td>
           
            <td>
                @*@Html.DisplayFor(modelItem => item.CoverImage)*@
                @if (item.CoverImage is null)
                {
                    <img src="~/img_main_privacy.3db3988e.png" width="50" height="50" />
                }
                else
                {
                    <img src="data:image/png;base64,@Convert.ToBase64String(@item.CoverImage)" width="50" height="50" class="img-thumbnail rounded-circle" />
                }

            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.BackCoverImage)
                <img src="@item.BackCoverImage" class="img-thumbnail rounded-circle" />
            </td>*@

            <td>
                <a asp-action="Edit" class="btn btn-outline-secondary" asp-route-id="@item.PharmacyID">Edit</a> |
                <a asp-action="Details" class="btn btn-outline-success" asp-route-id="@item.PharmacyID">Details</a> |
                <a asp-action="Delete" class="btn btn-outline-warning" asp-route-id="@item.PharmacyID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
